<% if !user_signed_in? %>
<%= render 'items/brief' %>
<% end %>

<h1>Items</h1>
<div class="grid-x grid-margin-x small-up-2 medium-up-3">
  <% @items.order('created_at').reverse.each do |item| %>
    <div class="cell">
      <div class="card">
        <%= link_to item  do %>
          <% if item.picture.attached? %>
          <%= image_tag item.picture %>
          <% else %>
          <img src="https://live.staticflickr.com/469/19471741213_eece5bb9bd_b.jpg">
          <% end %>
        <% end %>
        <div class="card-section">
        <h4><%= item.title %></h4>
          <p><%= item.description %></p>
          <p><%= item.price %>&nbsp;â‚¬</p>
          <%= button_to "Ajouter au panier", cart_items_path(item_id: item.id), :method => :post, :class => "button" %>
        </div>
      </div>
    </div>
<% end %>
</div>

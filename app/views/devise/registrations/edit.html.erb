<div class='grid-container'>
  <h1>Gestion du compte</h1>
  
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
  
    <fieldset class='fieldset grid'>
      <legend>Informations utilisateur</legend>
    <div class="field">
      <%= f.label :email %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>
  
    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>
  
      <div class='field'>
      <%= f.label "mot-de-passe" %> <i><%= @minimum_password_length %> caractères minimum (laissez vide si vous n’en changez pas)</i>
      <%= f.password_field :password, autocomplete: "new-password" %>
      <% if @minimum_password_length %>
      <% end %>
    </div>
  
      <div class='field'>
        <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>
  
    <div class="field">
      <%= f.label 'mot-de-passe actuel' %> <i>(nécessaire pour valider le changement)</i>
      <%= f.password_field :current_password, autocomplete: "current-password" %>
    </div>
  
    <div class="actions">
      <%= f.submit "Mettre à jour", :class => 'button' %>
    </div>
  <% end %>
</fieldset>
  
  <fieldset class='fieldset'>
    <legend>Danger zone</legend>
    <p>Vous pouvez effacer votre compte mais il sera impossible d’accéder à vos anciennes données&nbsp;: commandes, factures, etc.</p>
    
    <%= button_to "Effacer mon compte", registration_path(resource_name), data: { confirm: "Etes vous sur ?" }, method: :delete, :class => 'button alert' %>
    
  </fieldset>
  <%= link_to "Back", :back, :class => 'button'%>
</div>

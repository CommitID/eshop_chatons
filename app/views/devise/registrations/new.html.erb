<div class='grid-container'>
<h1>Créer un compte</h1>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email, :class => 'mandatory' %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label 'prénom' %>
    <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
  </div>

  <div class="field">
    <%= f.label 'nom' %>
    <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %>
  </div>

  <div class="field">
    <%= f.label 'mot-de-passe', :class => 'mandatory' %>
    <% if @minimum_password_length %>
    <i>(<%= @minimum_password_length %> characters minimum)</i>
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label 'confirmez le mot-de-passe', :class => 'mandatory' %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Créer votre compte", :class => 'button' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
